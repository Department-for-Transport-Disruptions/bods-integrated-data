{
    "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
    "files": {
        "ignoreUnknown": true,
        "ignore": ["**/coverage/**", "**/dist/**", "**/*.cjs", "**/*.mjs", "**/*.config.js", "**/*.config.ts"]
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": false,
            "style": {
                "useImportType": "off"
            }
        }
    }
}
