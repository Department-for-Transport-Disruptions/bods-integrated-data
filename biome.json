{
    "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
    "files": {
        "ignoreUnknown": true,
        "ignore": [
            "data/",
            "**/coverage/**",
            "**/dist/**",
            "**/*.cjs",
            "**/*.mjs",
            "**/*.config.js",
            "**/*.config.ts",
            "./terraform/",
            "./load-testing/"
        ]
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120,
        "formatWithErrors": true
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useImportType": "off"
            },
            "correctness": {
                "noUnusedImports": "error",
                "noUnusedVariables": "error"
            }
        }
    }
}
