{
    "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
    "files": {
        "ignoreUnknown": true,
        "ignore": [
            "coverage",
            "dist",
            "./data/",
            "./terraform/",
            "./load-testing/",
            "./integration-testing/test-results/",
            "./src/shared/gtfs-realtime/"
        ]
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useImportType": "off"
            },
            "correctness": {
                "noUnusedImports": "error",
                "noUnusedVariables": "error"
            },
            "suspicious": {
                "noConsoleLog": "error"
            }
        }
    }
}
